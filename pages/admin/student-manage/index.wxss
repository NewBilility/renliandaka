.container {
  padding: 20px;
}

.search-bar {
  display: flex;
  margin-bottom: 20px;
}

.search-input {
  flex: 1;
  height: 40px;
  padding: 0 15px;
  border: 1px solid #eee;
  border-radius: 8px;
  margin-right: 10px;
}

.search-btn {
  width: 80px;
  height: 40px;
  line-height: 40px;
  background: #007aff;
  color: white;
  font-size: 14px;
  border-radius: 8px;
}

.action-bar {
  margin-bottom: 20px;
}

.add-btn {
  background: #007aff;
  color: white;
  border-radius: 8px;
}

.student-list {
  margin-bottom: 20px;
}

.student-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 15px;
  border-radius: 12px;
  margin-bottom: 15px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.student-avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 15px;
}

.student-info {
  flex: 1;
}

.student-main {
  margin-bottom: 5px;
}

.student-name {
  font-size: 16px;
  font-weight: 500;
  margin-right: 10px;
}

.student-id {
  font-size: 14px;
  color: #666;
}

.student-sub {
  font-size: 12px;
  color: #999;
}

.student-sub text {
  margin-right: 10px;
}

.student-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  margin: 5px !important;
  min-width: 60px;
}

.action-btn.edit {
  background: #007aff;
  color: white;
}

.action-btn.delete {
  background: #ff3b30;
  color: white;
} 