.container {
    padding: 20px;
}

.form-group {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.form-item {
    margin-bottom: 20px;
    width: 100%;
    box-sizing: border-box;
}

.form-label {
    display: block;
    font-size: 14px;
    color: #333;
    margin-bottom: 8px;
}

.form-input {
    width: 100%;
    height: 44px;
    padding: 0 15px;
    border: 1px solid #eee;
    border-radius: 8px;
    font-size: 14px;
    box-sizing: border-box;
}

.form-textarea {
    width: 100%;
    height: 200px;
    padding: 15px;
    border: 1px solid #eee;
    border-radius: 8px;
    font-size: 14px;
    box-sizing: border-box;
}

.form-actions {
    margin-top: 30px;
    width: 100%;
    box-sizing: border-box;
}

.submit-btn {
    background: #007aff;
    color: white;
    border-radius: 8px;
    width: 100%;
    box-sizing: border-box;
}

.submit-btn:active {
    opacity: 0.8;
} 