.container {
    padding: 20px;
}

.announcement-detail {
    background: white;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 20px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.announcement-header {
    margin-bottom: 15px;
}

.announcement-title {
    display: block;
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 10px;
}

.announcement-time {
    font-size: 12px;
    color: #999;
}

.announcement-content {
    font-size: 14px;
    color: #333;
    line-height: 1.6;
}

.comments-section {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.section-title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 15px;
}

.comment-item {
    padding: 15px 0;
    border-bottom: 1px solid #eee;
}

.comment-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
}

.comment-author {
    font-size: 14px;
    font-weight: 500;
}

.comment-time {
    font-size: 12px;
    color: #999;
}

.comment-content {
    font-size: 14px;
    color: #333;
    margin-bottom: 10px;
}

.reply-section {
    background: #f8f8f8;
    padding: 10px;
    border-radius: 8px;
}

.reply-content {
    font-size: 14px;
    color: #666;
}

.reply-label {
    color: #007aff;
}

.reply-actions {
    display: flex;
    justify-content: flex-end;
}

.reply-btn {
    background: #007aff;
    color: white;
}

.reply-input-section {
    display: flex;
    align-items: center;
    margin-top: 10px;
}

.reply-input {
    flex: 1;
    height: 36px;
    padding: 0 15px;
    border: 1px solid #eee;
    border-radius: 8px;
    margin-right: 10px;
    font-size: 14px;
}

.submit-reply-btn {
    background: #007aff;
    color: white;
} 