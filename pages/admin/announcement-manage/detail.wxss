.container {
    padding: 20px;
}

.loading {
    text-align: center;
    color: #999;
    padding: 20px;
}

.announcement-detail {
    background: white;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 20px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.announcement-header {
    margin-bottom: 15px;
}

.announcement-title {
    display: block;
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 10px;
}

.announcement-info {
    font-size: 12px;
    color: #999;
}

.announcement-info text {
    margin-right: 15px;
}

.announcement-content {
    font-size: 14px;
    color: #333;
    line-height: 1.6;
}

.comments-section {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.section-title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 15px;
    color: #333;
}

/* 评论输入区域 */
.comment-input-section {
    margin-bottom: 20px;
    padding: 15px;
    background: #f8f8f8;
    border-radius: 8px;
}

.comment-input {
    width: 100%;
    min-height: 80px;
    padding: 10px;
    background: white;
    border: 1px solid #eee;
    border-radius: 8px;
    font-size: 14px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

.submit-btn {
    background: #007aff;
    color: white;
    font-size: 14px;
    padding: 8px 20px;
    border-radius: 6px;
    margin: 0;
}

.submit-btn:active {
    opacity: 0.8;
}

/* 评论列表 */
.comment-item {
    padding: 15px 0;
    border-bottom: 1px solid #eee;
}

.comment-item:last-child {
    border-bottom: none;
}

.comment-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
}

.commenter-name {
    font-size: 14px;
    color: #007aff;
    font-weight: 500;
}

.comment-time {
    font-size: 12px;
    color: #999;
}

.comment-content {
    font-size: 14px;
    color: #333;
    margin-bottom: 10px;
}

/* 评论操作区 */
.comment-actions {
    margin: 8px 0;
}

.reply-btn {
    font-size: 12px;
    color: #007aff;
}

.reply-btn:active {
    opacity: 0.8;
}

/* 回复输入区域 */
.reply-input-section {
    margin: 10px 0;
    padding: 10px;
    background: #f8f8f8;
    border-radius: 8px;
}

.reply-input {
    width: 100%;
    min-height: 60px;
    padding: 8px;
    background: white;
    border: 1px solid #eee;
    border-radius: 6px;
    font-size: 14px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

.reply-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

.reply-actions button {
    font-size: 12px;
    padding: 6px 15px;
    border-radius: 4px;
    margin: 0;
}

.cancel-btn {
    background: #f5f5f5;
    color: #666;
}

/* 回复列表 */
.replies-section {
    background: #f8f8f8;
    border-radius: 8px;
    margin-top: 10px;
}

.replies-header {
    padding: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    color: #666;
    border-bottom: 1px solid #eee;
}

.toggle-icon {
    color: #007aff;
}

.replies-list {
    padding: 10px;
}

.reply-item {
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
}

.reply-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.reply-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}

.replier-name {
    font-size: 12px;
    color: #007aff;
}

.reply-time {
    font-size: 12px;
    color: #999;
}

.reply-content {
    font-size: 13px;
    color: #333;
}

.no-comments {
    text-align: center;
    color: #999;
    padding: 20px 0;
    font-size: 14px;
} 