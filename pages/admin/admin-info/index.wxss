.container {
    padding: 20px;
}

.loading {
    text-align: center;
    color: #999;
    padding: 20px;
}

.section {
    background: white;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.section-title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 15px;
    color: #333;
}

.info-item {
    display: flex;
    margin-bottom: 12px;
    font-size: 14px;
}

.label {
    color: #666;
    width: 80px;
}

.value {
    color: #333;
    flex: 1;
}

.area-list {
    margin-top: 10px;
}

.area-item {
    background: #f8f8f8;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 10px;
}

.area-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
}

.area-name {
    font-size: 14px;
    font-weight: 500;
    color: #333;
}

.area-time {
    font-size: 12px;
    color: #999;
}

.area-desc {
    font-size: 13px;
    color: #666;
    margin-bottom: 8px;
}

.area-location {
    font-size: 12px;
    color: #999;
}

.area-location text {
    margin-right: 15px;
}

.input-value {
    flex: 1;
    height: 32px;
    padding: 0 8px;
    border: 1px solid #eee;
    border-radius: 4px;
    font-size: 14px;
    color: #333;
}

.input-area-name {
    font-size: 14px;
    font-weight: 500;
    color: #333;
    border: 1px solid #eee;
    border-radius: 4px;
    padding: 4px 8px;
    width: 200px;
}

.input-area-desc {
    width: 100%;
    height: 60px;
    padding: 8px;
    border: 1px solid #eee;
    border-radius: 4px;
    font-size: 13px;
    color: #666;
    margin: 8px 0;
    box-sizing: border-box;
}

.location-item {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
}

.location-label {
    font-size: 12px;
    color: #999;
    margin-right: 5px;
    width: 45px;
}

.input-location {
    width: 100px;
    height: 28px;
    padding: 0 8px;
    border: 1px solid #eee;
    border-radius: 4px;
    font-size: 12px;
    color: #333;
}

.save-btn {
    margin-top: 30px;
    background: #007aff;
    color: white;
    border-radius: 8px;
}

.save-btn:active {
    opacity: 0.8;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.add-area-btn {
    font-size: 14px;
    padding: 6px 12px;
    background: #007aff;
    color: white;
    border-radius: 4px;
    margin: 0;
}

.area-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.delete-area-btn {
    padding: 4px 8px;
    background: #ff3b30;
    color: white;
    margin-left: 10px;
}

.add-area-btn:active,
.delete-area-btn:active {
    opacity: 0.8;
} 