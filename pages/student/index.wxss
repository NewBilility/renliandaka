.container {
  padding: 20px;
}

.welcome-section {
  background: white;
  padding: 30px 20px;
  border-radius: 12px;
  margin-bottom: 30px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.welcome-text {
  font-size: 24px;
  font-weight: 500;
  color: #333;
  margin-bottom: 10px;
  display: block;
}

.student-info {
  font-size: 14px;
  color: #666;
  display: block;
}

.function-list {
  margin-top: 20px;
}

.function-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 15px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.function-item:active {
  opacity: 0.8;
}

.function-icon {
  font-size: 24px;
  margin-right: 15px;
}

.function-info {
  flex: 1;
}

.function-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  display: block;
}

.function-desc {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.function-arrow {
  color: #999;
  font-size: 18px;
} 