.container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
}

.login-box {
  width: 80%;
  padding: 30px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.role-switch {
  display: flex;
  margin-bottom: 30px;
  background: #f5f5f5;
  padding: 4px;
  border-radius: 8px;
}

.role-item {
  flex: 1;
  text-align: center;
  padding: 10px;
  border-radius: 6px;
  font-size: 14px;
  color: #666;
}

.role-item.active {
  background: white;
  color: #007aff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30px;
  width: 100%;
  box-sizing: border-box;
}

.input-item {
  width: 100%;
  height: 44px;
  margin-bottom: 15px;
  padding: 0 15px;
  border: 1px solid #eee;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background: #007aff;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  box-sizing: border-box;
}

.login-btn:active {
  opacity: 0.8;
} 